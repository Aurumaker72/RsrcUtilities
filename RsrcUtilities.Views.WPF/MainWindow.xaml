<Window x:Class="RsrcUtilities.Views.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RsrcUtilities.Views.WPF"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <ListView x:Name="ControlSelection_ListView" Grid.Column="0" SelectedIndex="0">
            <ListViewItem Content="Button" Tag="Button"/>
            <ListViewItem Content="TextBox" Tag="TextBox"/>
            <ListViewItem Content="CheckBox" Tag="CheckBox"/>
            <ListViewItem Content="GroupBox" Tag="GroupBox"/>
        </ListView>
        
        <skia:SKElement x:Name="Main_CanvasControl" Grid.Column="1" PaintSurface="Main_CanvasControl_OnPaintSurface" MouseDown="Main_CanvasControl_OnMouseDown" MouseUp="Main_CanvasControl_OnMouseUp" MouseMove="Main_CanvasControl_OnMouseMove" />
    </Grid>
</Window>
